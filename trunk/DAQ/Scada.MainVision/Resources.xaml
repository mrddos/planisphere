<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">




    <!-- -->
    <ControlTemplate x:Key="ContentTemplate" TargetType="{x:Type ContentControl}">
        <Button Content="HH"></Button>
    </ControlTemplate>

    <ControlTemplate x:Key="HerePaneTemplate" TargetType="{x:Type ContentControl}">
        <Grid>
            <!-- Path would be set in C# code -->
            <Path x:Name="Path" Stroke="Black" StrokeThickness="2" Fill="AliceBlue">
                <Path.Effect>
                    <DropShadowEffect Direction="270" ShadowDepth="3" Opacity=".5"></DropShadowEffect>
                </Path.Effect>
            </Path>
        </Grid>
        <ControlTemplate.Triggers>
            <!--
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="ButtonPolygon" Property="Fill" Value="Black"></Setter>
            </Trigger>
            -->
            <!--
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="ButtonPolygon" Property="Fill" Value="Gray"/>
            </Trigger>
            -->
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>