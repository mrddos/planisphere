<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- -->
    <ControlTemplate x:Key="BasicDataPanelTemplate" TargetType="{x:Type ContentControl}">

        <StackPanel Orientation="Vertical" Height="200" Background="AliceBlue">

            <ContentControl Template="{StaticResource ButtonTemplate}" HorizontalAlignment="Stretch" Margin="5" Height="20"></ContentControl>
            <ContentControl Content="{Binding}"></ContentControl>
        </StackPanel>
    </ControlTemplate>

    <!-- -->
    <ControlTemplate x:Key="ContentTemplate" TargetType="{x:Type ContentControl}">
        <Button Content="HH"></Button>
    </ControlTemplate>
</ResourceDictionary>